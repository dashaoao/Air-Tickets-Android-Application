<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/background">

    <ImageView
        android:id="@+id/item_music_image"
        android:layout_width="132dp"
        android:layout_height="132dp"
        android:scaleType="centerCrop"
        android:clipToOutline="true"
        android:background="@drawable/background_16dp"
        android:backgroundTint="@color/on_secondary_container"/>

    <TextView
        android:id="@+id/item_music_name"
        style="@style/TextView.Subtitle"
        tools:text="Die Antwoord"/>

    <TextView
        android:id="@+id/item_music_town"
        style="@style/TextView.Basic.Regular"
        tools:text="Будапешт"/>

    <TextView
        android:id="@+id/item_music_price"
        android:drawableLeft="@drawable/ic_airplane"
        android:drawableTint="@color/on_secondary_container"
        style="@style/TextView.Basic.Regular"
        tools:text="от 22 223 ₽"/>

</LinearLayout>