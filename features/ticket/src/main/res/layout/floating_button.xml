<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/background_16dp"
    android:backgroundTint="@color/blue"
    android:padding="8dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/ticket_btn_filter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_btn_filter"
        android:drawableStart="@drawable/ic_filter"
        android:layout_marginEnd="16dp"
        style="@style/TextView.Basic.Italic.FloatingButtonTicket"/>

    <TextView
        android:id="@+id/ticket_btn_price_chart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_btn_prices"
        android:drawableStart="@drawable/ic_price_chart"
        style="@style/TextView.Basic.Italic.FloatingButtonTicket"/>
</LinearLayout>