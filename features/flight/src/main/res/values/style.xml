<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextView.Basic.Italic.ButtonFlight">
        <item name="android:background">@drawable/background_16dp</item>
        <item name="android:backgroundTint">@color/secondary_container</item>
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:paddingVertical">8dp</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:drawableTint">@color/on_background</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="TextView.Basic.Italic.MainButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/background_8dp</item>
        <item name="android:backgroundTint">@color/blue</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="DatePickerDialog" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="android:windowBackground">@color/background</item>
        <item name="colorAccent">@color/blue</item>
        <item name="android:colorControlActivated">@color/blue</item>
        <item name="android:textColorPrimary">@color/on_background</item>
        <item name="android:textColorSecondary">@color/blue</item>
        <item name="android:buttonBarButtonStyle">@style/DialogButtonStyle</item>
    </style>

    <style name="DialogButtonStyle">
        <item name="android:textColor">@color/blue</item>
        <item name="android:backgroundTint">@color/transparent</item>
    </style>
</resources>